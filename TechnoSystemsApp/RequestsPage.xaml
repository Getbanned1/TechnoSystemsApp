<Page x:Class="TechnoSystemsApp.RequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnoSystemsApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequestsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" x:Name="SearchMenu" Orientation="Horizontal">
            <Label Content="Поиск" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBar" Width="150" Height="30" TextAlignment="Justify" TextChanged="SearchBar_TextChanged"></TextBox>
            <Label Content="Сортировать по статусу" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="SortBox" Width="100" Height="30" VerticalAlignment="Center" SelectionChanged="SortBox_SelectionChanged"></ComboBox>
            <Label Content="Сортировать по дате" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="DataSortBox" Width="100" Height="30" VerticalAlignment="Center" SelectionChanged="SortBox_SelectionChanged"></ComboBox>
        </StackPanel>
        <ListView Grid.Row="1" x:Name="RequestsView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID"
                        DisplayMemberBinding="{Binding Id}"></GridViewColumn>
                    <GridViewColumn Header="Название тарифа"
                                     DisplayMemberBinding="{Binding Tariff.Name}"></GridViewColumn>
                    <GridViewColumn Header="ФИО Клиента"
                                     DisplayMemberBinding="{Binding User.FullName}"></GridViewColumn>
                    <GridViewColumn Header="Дата заявки"
                                     DisplayMemberBinding="{Binding Date}"></GridViewColumn>
                    <GridViewColumn Header="Статус заявки"
                                     DisplayMemberBinding="{Binding Status.Name}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
