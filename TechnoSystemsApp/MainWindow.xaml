<Window x:Class="TechnoSystemsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnoSystemsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="NavigationPanel" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button x:Name="Tariff" Content="Тарифы" Width="50" ></Button>
            <Button x:Name="Requests" Content="Заявки" Margin="10,0,0,0" Width="50" ></Button>
    
        </StackPanel>
        <Frame Grid.Row="1" x:Name="MainFrame" VerticalAlignment="Stretch" ></Frame>
    </Grid>
</Window>
