<Window x:Class="TechnoSystemsApp.RequestsChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnoSystemsApp"
        mc:Ignorable="d"
        Title="Изменить заявку" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="ФИО клиента: " Margin="10,10"></Label>
            <ComboBox x:Name="UserComboBox" DisplayMemberPath="FullName" Height="30" SelectedValuePath="Id" Margin="50,0,0,0" Width="230"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label  Content="Дата заявки:" Margin="10,10"></Label>
            <DatePicker x:Name="DateBox" Margin="50,0,0,0" Width="230" Height="25"></DatePicker>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label  Content="Тариф:" Margin="10,10"></Label>
            <ComboBox x:Name="TariffComboBox" DisplayMemberPath="Name" Height="30" SelectedValuePath="Id" Margin="50,0,0,0" Width="230"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label  Content="Статус:" Margin="10,10"></Label>
            <ComboBox x:Name="StatusComboBox" DisplayMemberPath="Name" Height="30" SelectedValuePath="Id" Margin="50,0,0,0" Width="230"></ComboBox>
        </StackPanel>

        <Button Content="Сохранить изменения" x:Name="SaveButton" HorizontalAlignment="Left" Margin="196,199,0,0" Grid.Row="5" VerticalAlignment="Top" Width="178" Click="SaveButton_Click" Height="25"/>

    </Grid>
</Window>
